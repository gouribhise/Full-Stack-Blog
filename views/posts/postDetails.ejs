<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"

    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans&family=Roboto:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/css/postDetails.css" />
    <title>Post Details</title>
  </head>
  <body>
    <!-- nav -->
    <%-include('../partials/navbar.ejs') %>
    <!-- content -->
    <section class="container-flex">
      <!-- main -->
      <main class="post-details">
        <article class="post-details-content">
          <img src="<%=post?.image%> " alt="" class="post-image" />
          <%if(post?.user?._id.toString()===userAuth?.toString){%>
             <!-- update post icon -->
             <a href="/api/v1/posts/get-form-update/<%=post?._id%>" class="comment-update">
              <i class="fas fa-edit"></i>
            </a>
            <!-- delete post icon -->
            <form action="/api/v1/posts/<%=post?._id%>?_method=DELETE" method="post">
              <i class="fas fa-trash-alt"></i>
          </form>
          <%}%>
          <p class="post-info">
            <span class="post-date">
             
            </span>
          </p>

          <h1 class="post-title"><%=post?.title%></h1>
          <p class="post-body"><%=post?.description%></p>
        </article>
        <!-- Comment form -->
        <div class="comment-form">
          <h2>Leave a comment</h2>
          <form action="/api/v1/comments/<%=post?._id%>" method="post">
            <div class="form-group">
              <input type="text" name="name" id="name" />
            </div>
            <button type="submit" class="btn">Submit</button>
          </form>
        </div>

        <!-- comments -->
        <div class="comments">
          <h2>Comments</h2>
          <!--loop comments-->
          <%post?.comments?.forEach(()=>{%>
            <div class="comment">
              <div class="comment-info">
                <img
                  src="<%=post?.user?.profileImage%>"
                  alt=""
                  class="comment-author-image"
                />
                <div class="comment-author">
                  <h4>John Doe</h4>
                  <span>January 1, 2020</span>
                </div>
              </div>
              <div class="comment-body">
                <p>
                <%=comment?.message%>
                </p>
                <!-- delete/update icon -->
                <div class="post-info">
                  <article class="post-details-content">
                    
                    <div class="post-details-action">
                      <a href="#" class="comment-update">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form action="/api/v1/posts/<%=post?._id%>?method=DELETE" method="post">
                        <button><i class="fas fa-trash-alt"></i></button>
                      </form>
                    </div>
                  
                  </article>
                 
                </div>
              </div>
            </div>
            <%})%>
        
         
        </div>
      </main>
      <!-- aside -->
      <aside class="sidebar">
        <div class="about-me">
          <h2>About The Author</h2>
          <img
            class="avatar"
            src="<%=post?.user?.profileImage%>"
            alt="profile image"
          />

          <h2 class="about-name"><%=post?.user?.fullname%></h2>
          <small><%=post?.user?.role%></small>
          <p class="about-me-bio"><%=post?.user?.bio%></p>
        </div>

